<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000">


    <LinearLayout
        android:id="@+id/linear_layout_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    <TextView
        android:id="@+id/delete_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableTop="@drawable/ic_delete_forever_white_36dp"
        android:text="Przeciągnij aby usunąć"
        android:textColor="#FFFAFAFA"
        android:background="#7f0000"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:alpha="0.5"
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:layout_margin="60dp">
        <TextView
            android:id="@+id/title_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Elo udalo sie? Mam nadzieje ze tak"
            android:gravity="center"
            android:textColor="#FFFAFAFA"
            android:background="#FF0d47a1"/>
        </LinearLayout>

    </LinearLayout>






</RelativeLayout>